    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:windowSoftInputMode="adjustResize"
        android:id="@+id/login_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_backgroundinput"
        android:orientation="vertical"
        android:padding="15dp">
        <EditText
            android:id="@+id/login_userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_borderedt"
            android:hint="Nhập số điện thoại"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="#FC3369"
            android:textColorHint="#51505D"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/login_userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_borderedt"
            android:hint="Nhập mật khẩu"
            android:padding="15dp"
            android:textColor="#FC3369"
            android:textColorHint="#51505D"
            android:textStyle="bold" />
        <Button
            android:id="@+id/login_btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_backgroundbtnlogin"
            android:text="Log in"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#828095" />
            <TextView
                android:id="@+id/login_gotoRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:text="Register now"
                android:textColor="#FF3366"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>