<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/item_img_linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/item_img_movieImage"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/infinitywar" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/item_tv_movieName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Strange"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/item_tv_movieID"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại: "
                            android:background="#ff1a75"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/item_tv_movieKind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viễn tưởng"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textColor="#ff1a75"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời lượng: "
                            android:textSize="18sp"
                            android:background="#ff80ff"
                            android:textStyle="bold"
                            android:textColor="#000"/>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/item_tv_movieTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="180"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textColor="#cc00cc"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" phút"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:textColor="#cc00cc"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>